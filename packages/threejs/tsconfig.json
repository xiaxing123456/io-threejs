{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "outDir": "build",
        "declaration": true,
        "declarationDir": "build/types"
    },
    "include": ["src/**/*.ts", "src/types/**/*.d.ts", "src/assets/**/*"],
    "exclude": ["node_modules"]
}
